<UserControl x:Class="DeCraftLauncher.UIControls.JavaFinderEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeCraftLauncher.UIControls"
             mc:Ignorable="d" Height="28">
    <Grid>
        <Rectangle Fill="Transparent"/>
        <StackPanel Orientation="Horizontal">
            <Label x:Name="label_arch" Content="arch." Foreground="#6060FF" MinWidth="50" Margin="0,0,-5,0"></Label>
            <StackPanel Orientation="Vertical" MinWidth="85">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-6">
                    <Label x:Name="label_version" Content="17.0.0"  FontSize="12" Foreground="#FFD8D8D8" FontStyle="Italic" FontWeight="DemiBold"/>
                    <Label x:Name="label_type" Content="JDK" VerticalContentAlignment="Center" FontSize="10" Margin="-6,0" Foreground="#FFD8D8D8" FontStyle="Italic"/>
                </StackPanel>
                <Label x:Name="label_implementor" Content="whoever" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="9" Margin="0,-6" Foreground="#FF919191" FontStyle="Italic"/>
            </StackPanel>
            <Separator Width="3" Margin="2,0,2,0" ></Separator>
            <Label x:Name="label_path" Content="Full java path here" VerticalAlignment="Center" Foreground="White"/>
        </StackPanel>


    </Grid>
</UserControl>
